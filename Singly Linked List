#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;
};
struct node *head,*newnode,*temp,*prenode;
void display() 
{
    struct node *temp = head;
    int i = 1;
    printf("\nData in node is = \n");
    while (temp != NULL)
    {
        printf("Node %d) data: %d  address: %p  next address: %p\n", i, temp->data,temp,temp->next);
        temp = temp->next;
        i++;
    }
}
int main()
{
    int n=12,i,ch,b=12;
    printf("Enter the no of node = ");
    scanf("%d",&n);
    head=NULL;
    for( i=0;i<n;i++)
    
    {
        
        newnode=malloc(sizeof(struct node));
        
        printf("\nEnter the data = ");
        scanf("%d",&newnode->data);
        
        if(head==NULL)
        {
            head=newnode;
            temp=newnode;
        }
        
        else
        
        {
            temp->next=newnode;
            temp=newnode;
        }
        newnode->next = NULL;
        
        
    }
    display();
    printf("\nSize of structure = %d",sizeof(struct node));
    while(b!=0)
    {
        printf("\n1.insert at first\n");
        printf("2.insert at last\n");
        printf("3.delete at first\n");
        printf("4.delete at last\n");
        printf("5.insert after position\n");
        printf("6.inser at position\n");
        printf("7.Exit\n");
        printf("Enter your choice = ");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:newnode=malloc(sizeof(struct node));
                   printf("Enter the data = ");
                   scanf("%d",&newnode->data);
                   if(head==NULL)
                   {
                       head=newnode;
                       newnode->next=NULL;
                   }
                   else
                   {
                       newnode->next=head;
                       head=newnode;
                   }
                   display();
                   break;
            case 2:newnode=malloc(sizeof(struct node));
                   printf("Enter the data = ");
                   scanf("%d",&newnode->data);
                   if(head==NULL)
                   {
                       head=newnode;
                       newnode->next=NULL;
                   }
                   else
                   {
                       temp=head;
                       while(temp->next!=NULL)
                       {
                           temp=temp->next;
                       }
                       temp->next=newnode;
                       newnode->next=NULL;
                   }
                   display();
                   break;
            case 3:if(head==NULL)
                   {
                       printf("\nlist is empty\n");
                   }
                   else
                   {
                       temp=head;
                       head=head->next;
                       temp->next=NULL;
                       free(temp);
                   }
                   display();
                   break;
            case 4:if(head==NULL)
                   {
                       printf("list is empty");
                   }
                   else
                   {
                       temp=head;
                       while(temp->next!=NULL)
                       {
                           prenode=temp;
                           temp=temp->next;
                       }
                       prenode->next=NULL;
                       free(temp);
                   }
                   display();
                   break;
            case 5:int cnt=1,pos;
                   printf("Enter the position after which you want to insert = ");
                   scanf("%d",&pos);
                   
                   temp=head;
                   while(temp->next!=NULL)
                   {
                       temp=temp->next;
                       cnt++;
                   }
                   
                   if(pos<1 || pos>cnt)
                   {
                       printf("Invalid choice");
                       break;
                   }
                   if(pos==1)
                   {
                       newnode=malloc(sizeof(struct node));
                       printf("Enter the data = ");
                       scanf("%d",&newnode->data);
                       temp->next=newnode;
                       newnode->next=NULL;
                   }
                   else
                   {
                       newnode=malloc(sizeof(struct node));
                       printf("Enter the data = ");
                       scanf("%d",&newnode->data);
                       temp=head;
                       i=1;
                       while(i<pos)
                       {
                           temp=temp->next;
                       }
                       newnode->next=temp->next;
                       temp->next=newnode;
                       
                   }
                   display();
                   break;
            case 6:int ct=1,posi;
                   printf("Enter the position at which you want to insert = ");
                   scanf("%d",&posi);
                   
                   if(head==NULL)
                   {
                       newnode=malloc(sizeof(struct node));
                       printf("Enter data = ");
                       scanf("%d",&newnode->data);
                       head=newnode;
                       newnode->next=NULL;
                       break;
                   }
                   temp=head;
                   while(temp->next!=NULL)
                   {
                       temp=temp->next;
                       ct++;
                   }
                   if(posi<1 || posi>ct)
                   {
                       printf("Invalid choice");
                       break;
                   }
                   if(posi==1)
                   {
                       newnode=malloc(sizeof(struct node));
                       printf("Enter data = ");
                       scanf("%d",&newnode->data);
                       newnode->next=head;
                       head=newnode;
                   }
                   else
                   {
                       newnode=malloc(sizeof(struct node));
                       printf("Enter the data = ");
                       scanf("%d",&newnode->data);
                       temp=head;
                       prenode=head;
                       i=1;
                       while(i!=pos)
                       {
                           prenode=temp;
                           temp=temp->next;
                       }
                       prenode->next=newnode;
                       newnode->next=temp;
                       
                   }
                   display();
                   break;
            case 7:b=0;
                   printf("Exited Successfully");
                   break;
            default :printf("Invalid choicee");
        }    
    }
    return 0;
}                   
