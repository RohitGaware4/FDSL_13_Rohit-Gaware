#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;
};
struct node *front,*rear,*newnode,*temp;
void display() 
{
    temp = rear;
    temp=front;
    int i = 1;
    printf("\nData in node is = \n");
    while (temp != NULL)
    {
        printf("Node %d) data: %d  address: %p  next address: %p\n", i, temp->data,temp,temp->next);
        temp = temp->next;
        i++;
    }
}
int main()
{
    int n=12,i,ch,b=12;
    printf("Enter the no of node = ");
    scanf("%d",&n);
    rear=NULL;
    front=NULL;
    for( i=0;i<n;i++)
    
    {
        
        newnode=malloc(sizeof(struct node));
        
        printf("\nEnter the data = ");
        scanf("%d",&newnode->data);
        
        if(rear==NULL)
        {
            rear=newnode;
            front=newnode;
        }
        
        else
        
        {
            temp->next=newnode;
            temp=newnode;
        }
        newnode->next = NULL;
        
        
    }
    display();
    printf("\nSize of structure = %d",sizeof(struct node));
    while(b!=0)
    {
        printf("\n1.enQueue\n");
        printf("2.deQueue\n");
        printf("3.Exit\n");
        printf("Enter your choice = ");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:newnode=malloc(sizeof(struct node));
                   printf("Enter the data = ");
                   scanf("%d",&newnode->data);
                   if(rear==NULL)
                   {
                       rear=newnode;
                       newnode->next=NULL;
                   }
                   else
                   {
                       temp=rear;
                       while(temp->next!=NULL)
                       {
                           temp=temp->next;
                       }
                       temp->next=newnode;
                       newnode->next=NULL;
                   }
                   display();
                   break;
            case 2:if(front==NULL)
                   {
                       printf("list is empty");
                   }
                   else
                   {
                       temp=front;
                       front=front->next;
                       temp->next=NULL;
                       free(temp);
                   }
                   display();
                   break;
            case 3:b=0;
                   printf("successfuly Exited");
                   break;
            default:printf("Invalid choice");
        }
    
        
    }
    return 0;
}    
