
#include<stdio.h>
int main()
{
    int n=12,Queue[n],b=12;
    int rear=-1,front=-1;
    printf("Enter the size of Queue = ");
    scanf("%d",&n);
    while(b!=0)
    {
    printf("1.insert\n");
    printf("2.delete\n");
    printf("3.Display\n");
    printf("4.Exit\n");
    
    int ch;
    printf("Enter your choice = ");
    scanf("%d",&ch);
    
    switch(ch)
    
    {
        case 1:if(rear==-1 && front==-1)
               {
                   rear=0;
                   front=0;
                   printf("\nEnter the elements =");
                   scanf("%d",&Queue[rear]);
                   break;
               }
               else if((rear+1)%n==front)
               {
                   
                   printf("Queue if full\n");
                   break;
               }
               else
               {
                   rear=(rear+1)%n;
                   printf("\nEnter the elements =");
                   scanf("%d",&Queue[rear]);
                   break;
                   
               }
               
               break;
        case 2:if(rear==-1 && front==-1)
               {
                   printf("Queue is empty\n");
                   break;
               }
               else if(rear==front)
               {
                   printf("\nElement has been deleted\n");
                   rear=-1;
                   front=-1;
                   break;
               }
               else
               {
                   printf("\nElement has been deleted\n");
                   front=(front+1)%n;
               }
               
               break;
        case 3:if(rear==-1 && front==-1)
               {
                   printf("\nQueue is empty\n");
                   break;
               }
              
               int i;
               for(i=front ;i!=rear;i=(i+1)%n)
                   {
                       printf("Queue[%d]=%d\n",i,Queue[i]);
                   }
                   printf("Queue[%d]=%d\n",i,Queue[rear]);
                   break;  
               break;
        case 4:b=0;
               printf(" Succesfully Exit");
               break;
    }
    }
    
    
}
